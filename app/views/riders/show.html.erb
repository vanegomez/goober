<div class="row">
  <h2><%= current_rider.name.capitalize %>, let's ride dashboard!</h2>

  <% if current_rider.active_ride %>
    <h3>You have an active ride request</h3>
    <% current_rider.active_ride.each do |ride| %>
      <ul>
        <li>Pickup address: <%= ride.pickup %></li>
        <li>Dropoff address: <%= ride.dropoff %></li>
        <li>Passengers: <%= ride.passenger_number %></li>
        <li>Status: <%= ride.status.capitalize %></li>
        <% if ride.status == "accepted" %>
          <li>Driver: <%= ride.driver_name %></li>
          <li>Car Info: <%= ride.car_make.capitalize %>, <%= ride.car_model.capitalize %></li>
        <% end %>
      </ul>
    <% end %>

  <% else %>

    <%= link_to "request a ride", new_ride_path %>

  <% end %>

  <%= render "completed_rides" %>
</div>
